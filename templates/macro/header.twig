{%- macro css(filename) -%}
<link rel="stylesheet" type="text/css" media="screen" href="{{ constant('STATIC_SERVER') }}/styles/{{ filename }}?v={{ mtime_css(filename) }}" />
{%- endmacro -%}

{%- macro script(filename) -%}
<script type="text/javascript" src="{{ constant('STATIC_SERVER') }}/functions/{{ filename }}?v={{ mtime('functions/' ~ filename) }}"></script>
{%- endmacro -%}
