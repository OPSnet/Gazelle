{%- macro scss(filename) -%}
<link rel="stylesheet" type="text/css" media="screen" href="{{ constant('STATIC_SERVER') }}/styles/{{ filename }}?v={{ mtime_scss(filename) }}" />
{%- endmacro -%}

{%- macro css(filename) -%}
<link rel="stylesheet" type="text/css" media="screen" href="{{ constant('STATIC_SERVER') }}/styles/{{ filename }}?v={{ mtime_css(filename) }}" />
{%- endmacro -%}

{%- macro script(filename) -%}
{% set path %}{% if not (filename starts with 'vendor/') %}/functions{% endif %}{% endset %}
<script type="text/javascript" src="{{ constant('STATIC_SERVER') }}{{ path }}/{{ filename }}?v={{ mtime(path ~ '/' ~ filename) }}"></script>
{%- endmacro -%}
