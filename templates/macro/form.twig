{%- macro autocomplete(user, type) -%}
    {%- if user.hasAutocomplete(type) %} data-gazelle-autocomplete="true"{% endif -%}
{%- endmacro %}

{%- macro checked(flag) -%}
    {%- if flag %} checked="checked"{% endif -%}
{%- endmacro %}

{%- macro disabled(flag) -%}
    {%- if flag %} disabled="disabled"{% endif -%}
{%- endmacro %}

{# used as an additional name in an element class declaration #}
{%- macro hidden(flag) -%}
    {%- if flag %} hidden{% endif -%}
{%- endmacro %}

{%- macro class_hidden(flag) -%}
    {%- if flag %} class="hidden"{% endif -%}
{%- endmacro %}

{%- macro selected(flag) -%}
    {%- if flag %} selected="selected"{% endif -%}
{%- endmacro %}
