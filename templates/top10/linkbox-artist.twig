{% from 'macro/top10.twig' import active -%}

<div class="center">
    <a href="top10.php?type=lastfm&amp;category=weekly&amp;view={{
        view }}" class="brackets tooltip" title="These are the artists with the most Last.fm listeners this week">{{
            active("Weekly Artists", selected == "weekly") }}</a>
    <a href="top10.php?type=lastfm&amp;category=hyped&amp;view={{
        view }}" class="brackets tooltip" title="These are the the fastest rising artists on Last.fm this week">{{
            active("Hyped Artists", selected == "hyped") }}</a>
</div>
<div class="center">
    <a href="top10.php?type=lastfm&amp;category={{ category }}&amp;view=tiles" class="brackets">{{
       active("Tiles", view == "tiles") }}</a>
    <a href="top10.php?type=lastfm&amp;category={{ category }}&amp;view=list" class="brackets">{{
        active("List", view == "list") }}</a>
</div>
