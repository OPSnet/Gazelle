{{ header('Periodic Task Statistics') }}
<div class="header">
<h2>Periodic Task Statistics</h2>
</div>
{% include 'admin/scheduler/links.twig' with {'can_edit': viewer.permitted('admin_periodic_task_manage')} only %}
<div class="box pad">
    <table>
        <tr class="colhead">
            <td>Runs</td>
            <td>Duration</td>
            <td>Processed</td>
            <td>Events</td>
            <td>Errors</td>
        </tr>
        <tr>
            <td>{{ totals.runs|number_format }}</td>
            <td>{{ totals.duration|number_format }} ms</td>
            <td>{{ totals.processed|number_format }}</td>
            <td>{{ totals.events|number_format }}</td>
            <td>{{ totals.errors|number_format }}</td>
        </tr>
    </table>
    <br />
    <div id="task-averages" style="width: 100%; height: 350px;"></div>
    <br />
    <div>
        <div id="hourly-totals" style="width: 49.5%; height: 350px; float: left; padding-right: 1%"></div>
        <div id="daily-totals" style="width: 49.5%; height: 350px;"></div>
    </div>
</div>
<script type="text/javascript" src="{{ constant('STATIC_SERVER') }}/functions/highcharts.js"></script>
<script type="text/javascript" src="{{ constant('STATIC_SERVER') }}/functions/highcharts_custom.js"></script>
<script type="text/javascript">
document.addEventListener('DOMContentLoaded', function() {
    initialiseBarChart('task-averages', 'Task Averages', [
        {
            name: 'Duration',
            yAxis: 0,
            data: {{ tasks.duration|raw }}
        },
        {
            name: 'Processed',
            yAxis: 1,
            data: {{ tasks.processed|raw }}
        }
    ], {
        yAxis: [
            {
                title: {
                    text: 'Duration'
                },
                type: 'logarithmic'
            }, {
                title: {
                    text: 'Items'
                },
                opposite: true
            }
        ]
    });

    initialiseChart('hourly-totals', 'Hourly', [
        {
            name: 'Duration',
            yAxis: 0,
            data: {{ hourly.duration|raw }}
        },
        {
            name: 'Processed',
            yAxis: 1,
            data: {{ hourly.processed|raw }}
        }
    ], {
        yAxis: [
            {
                title: {
                    text: 'Duration'
                }
            }, {
                title: {
                    text: 'Items'
                },
                opposite: true
            }
        ]
    });

    initialiseChart('daily-totals', 'Daily', [
        {
            name: 'Duration',
            yAxis: 0,
            data: {{ daily.duration|raw }}
        },
        {
            name: 'Processed',
            yAxis: 1,
            data: {{ daily.processed|raw }}
        }
    ], {
        yAxis: [
            {
                title: {
                    text: 'Duration'
                }
            }, {
                title: {
                    text: 'Items'
                },
                opposite: true
            }
        ]
    });
});
</script>
{{ footer() }}
