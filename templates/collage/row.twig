<li class="image_group_{{ group_id }}">
    <a href="torrents.php?id={{ group_id }}" class="bookmark_{{ group_id }}">
{% if image %}
        <img class="tooltip_interactive" src="{{ image }}" alt="{{ name }}" title="{{ name }} <br /> {{ tags }}" data-title-plain="{{ name }} ({{ tags_plain }})" width="118" />
{% else %}
        <div style="width: 107px; padding: 5px;">{{ name }}</div>
{% endif %}
    </a>
</li>
