{% from 'macro/form.twig' import checked, disabled %}
<tr>
    <td class="label">Secondary classes:</td>
    <td>
{% for p in permission %}
        <label style="width: 130px; display: inline-block"><input type="checkbox" id="perm_{{ p.permId
            }}" name="secondary_classes[]" value="{{ p.permId }}"{{ checked(p.isSet) }}
            {{- disabled(p.Level > max_level) }} />&nbsp;{{ p.permName }}</label>
{% endfor %}
    </td>
</tr>
